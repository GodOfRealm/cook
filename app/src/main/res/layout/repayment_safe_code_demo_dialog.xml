<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="529dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="469dp"
            android:background="@drawable/common_bg_dialog"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:src="@mipmap/repayment_ic_safe_positive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/repayment_credit_positive"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_subhead" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:src="@mipmap/repayment_ic_safe_side" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/repayment_credit_side"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_subhead" />
        </LinearLayout>

        <ImageView
            android:id="@+id/repayment_safe_code_demo_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@mipmap/repayment_ic_close_safe_code" />
    </FrameLayout>
</FrameLayout>