<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_include_toolbar" />

    <View
        style="@style/commonSpaceStyle"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"></View>

    <com.miguan.youmi.core.widget.radius.RadiusImageView
        android:id="@+id/repayment_add_credit_detail_iv_bg"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitXY"
        android:src="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/base_v_commmon_space"
        app:rv_radius="6.5dp" />

    <com.miguan.youmi.core.widget.radius.RadiusImageView
        android:id="@+id/repayment_add_credit_detail_iv_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/home_ic_notice"
        app:layout_constraintStart_toStartOf="@+id/repayment_add_credit_detail_iv_bg"
        app:layout_constraintTop_toTopOf="@+id/repayment_add_credit_detail_iv_bg"
        app:rv_oval="true" />

    <TextView
        android:id="@+id/repayment_add_credit_detail_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="建设银行"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_subhead"
        app:layout_constraintStart_toEndOf="@+id/repayment_add_credit_detail_iv_icon"
        app:layout_constraintTop_toTopOf="@id/repayment_add_credit_detail_iv_icon" />

    <TextView
        android:id="@+id/repayment_add_credit_detail_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尤小米"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_caption"
        app:layout_constraintBottom_toBottomOf="@id/repayment_add_credit_detail_iv_icon"
        app:layout_constraintStart_toStartOf="@+id/repayment_add_credit_detail_tv_title" />


    <ImageView
        android:id="@+id/repayment_add_credit_detail_iv_point_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/repayment_ic_credit_point"
        app:layout_constraintBottom_toBottomOf="@+id/repayment_add_credit_detail_tv_number"
        app:layout_constraintEnd_toStartOf="@+id/repayment_add_credit_detail_iv_point_two"
        app:layout_constraintStart_toStartOf="@+id/repayment_add_credit_detail_iv_bg"
        app:layout_constraintTop_toTopOf="@+id/repayment_add_credit_detail_tv_number" />

    <ImageView
        android:id="@+id/repayment_add_credit_detail_iv_point_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/repayment_ic_credit_point"
        app:layout_constraintBottom_toBottomOf="@+id/repayment_add_credit_detail_tv_number"
        app:layout_constraintEnd_toStartOf="@+id/repayment_add_credit_detail_iv_point_three"
        app:layout_constraintStart_toEndOf="@+id/repayment_add_credit_detail_iv_point_one"
        app:layout_constraintTop_toTopOf="@+id/repayment_add_credit_detail_tv_number" />

    <ImageView
        android:id="@+id/repayment_add_credit_detail_iv_point_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/repayment_ic_credit_point"
        app:layout_constraintBottom_toBottomOf="@+id/repayment_add_credit_detail_tv_number"
        app:layout_constraintEnd_toStartOf="@+id/repayment_add_credit_detail_tv_number"
        app:layout_constraintStart_toEndOf="@+id/repayment_add_credit_detail_iv_point_two"
        app:layout_constraintTop_toTopOf="@+id/repayment_add_credit_detail_tv_number" />

    <com.miguan.youmi.widget.CountTextView
        android:id="@+id/repayment_add_credit_detail_tv_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="16.5dp"
        android:gravity="end"
        android:text="2381"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@id/repayment_add_credit_detail_iv_bg"
        app:layout_constraintEnd_toEndOf="@+id/repayment_add_credit_detail_iv_bg"
        app:layout_constraintStart_toEndOf="@+id/repayment_add_credit_detail_iv_point_three" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="19dp"
        android:background="@mipmap/repayment_ic_add_credit_card_bg"
        android:gravity="center"
        android:paddingTop="3dp"
        android:text="@string/repayment_add_credit_detail_info_credit"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_body"
        app:layout_constraintEnd_toEndOf="@id/repayment_add_credit_detail_iv_bg"
        app:layout_constraintTop_toTopOf="@id/repayment_add_credit_detail_iv_bg" />

    <com.miguan.youmi.widget.DividerTextView
        android:id="@+id/repayment_add_credit_detail_tv_repayment_date_title"
        style="@style/DividerTextViewTitleStyle"
        android:layout_marginTop="17dp"
        android:text="@string/repayment_credit_repayment_date"
        app:layout_constraintTop_toBottomOf="@id/repayment_add_credit_detail_iv_bg" />

    <TextView
        android:id="@+id/repayment_add_credit_detail_tv_repayment_date"
        style="@style/DividerTextViewInputStyle"
        android:hint="@string/repayment_add_credit_detail_info_repayment_date_hint"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/repayment_add_credit_detail_tv_repayment_date_title"
        app:layout_constraintTop_toTopOf="@+id/repayment_add_credit_detail_tv_repayment_date_title" />
    <com.miguan.youmi.widget.DividerTextView
        android:id="@+id/repayment_add_credit_detail_tv_bill_date_title"
        style="@style/DividerTextViewTitleStyle"
        android:text="@string/repayment_add_credit_detail_info_bill_date"
        app:layout_constraintTop_toBottomOf="@id/repayment_add_credit_detail_tv_repayment_date_title" />

    <TextView
        android:id="@+id/repayment_add_credit_detail_tv_repayment_bill_date"
        style="@style/DividerTextViewInputStyle"
        android:hint="@string/repayment_add_credit_detail_info_bill_date_hint"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/repayment_add_credit_detail_tv_bill_date_title"
        app:layout_constraintTop_toTopOf="@+id/repayment_add_credit_detail_tv_bill_date_title" />
    <com.miguan.youmi.widget.DividerTextView
        android:id="@+id/repayment_add_credit_detail_tv_phone_title"
        style="@style/DividerTextViewTitleStyle"
        android:text="@string/repayment_add_credit_detail_info_bill_date"
        app:layout_constraintTop_toBottomOf="@id/repayment_add_credit_detail_tv_bill_date_title" />

    <EditText
        android:id="@+id/repayment_add_credit_detail_et_phone"
        style="@style/DividerTextViewInputStyle"
        android:hint="@string/repayment_add_credit_detail_info_bill_date_hint"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/repayment_add_credit_detail_tv_phone_title"
        app:layout_constraintTop_toTopOf="@+id/repayment_add_credit_detail_tv_phone_title" />
</android.support.constraint.ConstraintLayout>