<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@id/base_v_commmon_space"
        style="@style/commonSpaceStyle"
        app:layout_constraintTop_toTopOf="parent"></View>

    <TextView
        android:id="@+id/home_recyele_recommend_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/home_hot_recommend"
        android:textColor="@color/colorTextPrimary"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/base_v_commmon_space" />

    <TextView
        android:id="@+id/home_recyele_recommend_tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="@string/home_more_product"
        app:layout_constraintBottom_toBottomOf="@+id/home_recyele_recommend_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_recyele_recommend_tv_title" />

    <View
        style="@style/DividerTheme"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@+id/home_recyele_recommend_tv_title"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_recyele_recommend_rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/home_recyele_recommend_tv_title"></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>