<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/img_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/list_empty_ic_fans"
        />

    <com.miguan.youmi.core.widget.radius.RadiusTextView
        android:id="@+id/rtv_empty_other"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="35.5dp"
        android:gravity="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/text_size_body2"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/img_empty"
        app:layout_constraintRight_toRightOf="@id/img_empty"
        app:layout_constraintTop_toBottomOf="@id/img_empty"
        app:rv_backgroundColor="@color/home_slide_color_fee74e"
        app:rv_radius="6dp"
        tools:text="继续滑动"
        />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_size_body"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rtv_empty_other"
        tools:text="description"
        />

    <com.miguan.youmi.core.widget.radius.RadiusTextView
        android:id="@+id/btn_retry"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:layout_marginTop="22dp"
        android:drawableLeft="@mipmap/list_ic_refresh"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="刷新"
        android:textColor="@color/colorTextTertiary"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_des"
        app:rv_backgroundColor="@color/white"
        app:rv_radius="7dp"
        app:rv_strokeColor="@color/colorTextTertiary"
        app:rv_strokeWidth="0.5dp"
        />

</android.support.constraint.ConstraintLayout>