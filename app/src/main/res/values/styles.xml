<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/main_bg_launch</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- 全局文本样式，通过android:textAppearance设置，具体属性在@style/AppTheme.Base里设置，
    分别是：android:textColorPrimary， android:textColorSecondary， android:textColorTertiary三个属性 -->
    <!-- textSize: 20sp; textColor: @color/textColorPrimary -->
    <!-- textSize: 16sp; textColor: @color/textColorPrimary -->
    <!-- textSize: 14sp; textColor: @color/textColorPrimary -->
    <!-- textSize: 12sp; textColor: @color/colorTextSecondary bbbbbb-->
    <!-- textSize: 12sp; textColor: @color/textColorTertiary 999999-->

    <!--统一分割线样式-->
    <style name="DividerTheme">
        <item name="android:id">@id/base_recycler_item_divider</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:background">@color/divPrimary</item>
    </style>

    <!-- 常用TabLayout样式 -->

    <!-- 通用Dialog -->
    <style name="CommonDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item><!--背景颜色及透明程度-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:backgroundDimEnabled">true</item><!--是否模糊-->
        <item name="android:backgroundDimAmount">0.7</item><!-- 黑色遮罩透明度 -->
        <item name="android:windowAnimationStyle">@style/CommonDialogAnimation</item>
    </style>

    <!-- 自定义Dialog主题 -->

    <!-- 底部Dialog动画 -->

    <!-- CommonDialog动画 -->
    <style name="CommonDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_scale_in</item>
        <item name="android:windowExitAnimation">@anim/push_scale_out</item>
    </style>

    <!-- 大圆角带边框按钮 -->
    <style name="ButtonStrokeRoundPrimary">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_fcbe00</item>
        <item name="android:textSize">@dimen/text_size_subhead2</item>
        <item name="rv_radius">20dp</item>
        <item name="rv_strokeColor">@color/color_ffcb2c</item>
        <item name="rv_strokeWidth">1dp</item>
    </style>
    <!-- 主页顶部标签样式 -->
    <style name="homeHeadTagStyle">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="bl_corners_radius">1dp</item>
        <item name="bl_solid_color">@color/white</item>
        <item name="bl_stroke_color">@color/color_cccccc</item>
        <item name="bl_stroke_width">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_cccccc</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <!-- 主页banner底下四个item的样式 -->
    <style name="homeBannerBottomItemStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">13dp</item>
        <item name="android:drawablePadding">11dp</item>
    </style>
    <!-- 统一空格间距 -->
    <style name="commonSpaceStyle">
        <item name="android:layout_height">@dimen/spacing_mini</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_efeff4</item>
    </style>
    <!-- 竖直分割线 -->
    <style name="VerticalLineStyle">
        <item name="android:layout_height">36dp</item>dp
        <item name="android:layout_width">0.5dp</item>
        <item name="android:background">@color/color_cccccc</item>
    </style>
    <!-- 主色通用渐变 -->
    <style name="CommonMainColorGradientStyle">
        <item name="bl_gradient_angle">0</item>
        <item name="bl_gradient_endColor">@color/color_ff8742</item>
        <item name="bl_gradient_startColor">@color/color_ffb041</item>
    </style>
    <!-- 蓝色通用渐变 -->
    <style name="CommonBlueColorGradientStyle">
        <item name="bl_gradient_angle">0</item>
        <item name="bl_gradient_endColor">@color/color_719eff</item>
        <item name="bl_gradient_startColor">@color/color_0e5bfe</item>
    </style>
</resources>
